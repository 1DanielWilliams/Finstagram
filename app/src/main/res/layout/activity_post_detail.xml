<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PostDetailActivity">

  <ImageView
      android:id="@+id/ivPostDetail"
      android:layout_width="match_parent"
      android:layout_height="167dp"
      android:layout_marginTop="24dp"
      android:scaleType="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvUsernameDetail"
      tools:srcCompat="@tools:sample/avatars" />

  <TextView
      android:id="@+id/tvUsernameDetail"
      android:layout_width="92dp"
      android:layout_height="24dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="28dp"
      android:text="TextView"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      app:layout_constraintStart_toEndOf="@+id/ivProfileImageDetail"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tvTimestampDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="2dp"
      android:text="TextView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivPostDetail" />

  <TextView
      android:id="@+id/tvDescriptionDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="14dp"
      android:text="Look at my photo!"
      android:textSize="20sp"
      app:layout_constraintStart_toEndOf="@+id/tvUsernameDetailSmall"
      app:layout_constraintTop_toBottomOf="@+id/tvTimestampDetail" />

  <TextView
      android:id="@+id/tvNumLikesDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="2dp"
      android:text="2"
      app:layout_constraintStart_toEndOf="@+id/tvTimestampDetail"
      app:layout_constraintTop_toBottomOf="@+id/ivPostDetail" />

  <TextView
      android:id="@+id/tvLikeDetails"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="2dp"
      android:text="Likes"
      app:layout_constraintStart_toEndOf="@+id/tvNumLikesDetail"
      app:layout_constraintTop_toBottomOf="@+id/ivPostDetail" />

  <TextView
      android:id="@+id/tvUsernameDetailSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="12dp"
      android:text="TextView"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTimestampDetail" />

  <ImageView
      android:id="@+id/ivProfileImageDetail"
      android:layout_width="59dp"
      android:layout_height="51dp"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>